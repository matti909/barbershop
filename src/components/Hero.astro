---
import { Calendar, Star, Scissors } from 'lucide-react';
---

<section class="relative bg-gradient-to-r from-gray-900 via-black to-gray-900 text-white overflow-hidden">
  <!-- Background Image with Parallax Effect -->
  <div
    class="absolute inset-0 bg-cover bg-center bg-no-repeat opacity-20 parallax-bg"
    style="background-image: url(https://images.pexels.com/photos/1813272/pexels-photo-1813272.jpeg)"
  >
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 lg:py-32">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div class="text-center lg:text-left">
        <div class="flex items-center justify-center lg:justify-start space-x-2 mb-6">
          <Scissors className="h-8 w-8 text-amber-500" />
          <span class="text-amber-500 font-semibold text-lg">BARBER SHOP</span>
        </div>

        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold leading-tight mb-6">
          El Arte de la
          <span class="text-amber-500 block">Barbería Masculina</span>
        </h1>

        <p class="text-xl text-gray-300 mb-8 max-w-lg mx-auto lg:mx-0">
          Más de 20 años de experiencia combinada. Cortes clásicos y modernos,
          cuidado profesional de barba y la mejor atención personalizada.
        </p>

        <!-- Stats -->
        <div class="grid grid-cols-3 gap-8 mb-10">
          <div class="text-center">
            <div class="text-3xl font-bold text-amber-500 mb-1">1</div>
            <div class="text-sm text-gray-400">Barbero Experto</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-amber-500 mb-1">20+</div>
            <div class="text-sm text-gray-400">Años Experiencia</div>
          </div>
          <div class="text-center">
            <div class="flex items-center justify-center space-x-1 mb-1">
              <span class="text-3xl font-bold text-amber-500">5.0</span>
              <Star className="h-6 w-6 text-amber-500 fill-current" />
            </div>
            <div class="text-sm text-gray-400">Valoración</div>
          </div>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          <a
            href="#booking"
            class="bg-amber-500 hover:bg-amber-600 text-black font-semibold px-8 py-4 rounded-lg transition-all duration-300 flex items-center justify-center space-x-2 hover:scale-105 hover:shadow-xl"
          >
            <Calendar className="h-5 w-5" />
            <span>Reservar Turno</span>
          </a>
          <a
            href="#services"
            class="border-2 border-white hover:bg-white hover:text-black text-white font-semibold px-8 py-4 rounded-lg transition-all duration-300 hover:scale-105"
          >
            Ver Servicios
          </a>
        </div>
      </div>

      <!-- Image -->
      <div class="relative">
        <div class="relative rounded-2xl overflow-hidden shadow-2xl">
          <img
            src="https://images.pexels.com/photos/1319460/pexels-photo-1319460.jpeg"
            alt="Barbero profesional en acción"
            class="w-full h-96 lg:h-[500px] object-cover"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  // Simple parallax effect
  let ticking = false;

  function updateParallax() {
    const scrolled = window.pageYOffset;
    const parallaxElements = document.querySelectorAll('.parallax-bg');

    parallaxElements.forEach((el) => {
      const rate = 0.5;
      (el as HTMLElement).style.transform = `translateY(${scrolled * rate}px)`;
    });

    ticking = false;
  }

  window.addEventListener('scroll', () => {
    if (!ticking) {
      window.requestAnimationFrame(updateParallax);
      ticking = true;
    }
  }, { passive: true });
</script>

<style>
  .parallax-bg {
    transition: transform 0.1s ease-out;
  }
</style>
