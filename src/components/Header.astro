---
import { Scissors, Calendar, Info } from 'lucide-react';
---

<header class="bg-black text-white sticky top-0 z-50 shadow-lg">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <div class="flex items-center space-x-2">
        <Scissors className="h-8 w-8 text-amber-500" />
        <span class="text-xl font-bold">BARBER SHOP</span>
      </div>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex space-x-8">
        <a
          href="#services"
          class="flex items-center space-x-1 px-3 py-2 text-sm font-medium hover:text-amber-500 transition-colors duration-200"
        >
          <Scissors className="h-4 w-4" />
          <span>Servicios</span>
        </a>
        <a
          href="#booking"
          class="flex items-center space-x-1 px-3 py-2 text-sm font-medium hover:text-amber-500 transition-colors duration-200"
        >
          <Calendar className="h-4 w-4" />
          <span>Reservar</span>
        </a>
        <a
          href="#contact"
          class="flex items-center space-x-1 px-3 py-2 text-sm font-medium hover:text-amber-500 transition-colors duration-200"
        >
          <Info className="h-4 w-4" />
          <span>Contacto</span>
        </a>
      </nav>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button
          id="mobile-menu-button"
          class="text-white hover:text-amber-500 transition-colors duration-200"
          aria-label="Toggle menu"
        >
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden">
      <div class="px-2 pt-2 pb-3 space-y-1 bg-gray-900 rounded-b-lg">
        <a
          href="#services"
          class="flex items-center space-x-2 px-3 py-2 text-base font-medium hover:text-amber-500 hover:bg-gray-800 rounded-md transition-colors duration-200"
        >
          <Scissors className="h-5 w-5" />
          <span>Servicios</span>
        </a>
        <a
          href="#booking"
          class="flex items-center space-x-2 px-3 py-2 text-base font-medium hover:text-amber-500 hover:bg-gray-800 rounded-md transition-colors duration-200"
        >
          <Calendar className="h-5 w-5" />
          <span>Reservar</span>
        </a>
        <a
          href="#contact"
          class="flex items-center space-x-2 px-3 py-2 text-base font-medium hover:text-amber-500 hover:bg-gray-800 rounded-md transition-colors duration-200"
        >
          <Info className="h-5 w-5" />
          <span>Contacto</span>
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');

  button?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });

  // Close menu when clicking on a link
  const links = menu?.querySelectorAll('a');
  links?.forEach(link => {
    link.addEventListener('click', () => {
      menu?.classList.add('hidden');
    });
  });
</script>
