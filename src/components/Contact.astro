---
import { MapPin, Phone, Mail, Clock, Instagram, Facebook, Twitter, MessageSquare } from 'lucide-react';
---

<section id="contact" class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold text-gray-900 mb-4">
        Contacto y Ubicación
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Visítanos, llámanos o síguenos en nuestras redes sociales.
        Estamos aquí para brindarte la mejor experiencia.
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Contact Information -->
      <div class="space-y-8">
        <!-- Location -->
        <div class="flex items-start space-x-4">
          <div class="bg-amber-100 p-3 rounded-full">
            <MapPin className="h-6 w-6 text-amber-600" />
          </div>
          <div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Ubicación</h3>
            <p class="text-gray-600">Av. Principal 123, Centro</p>
            <p class="text-gray-600">Ciudad Autónoma, Argentina</p>
            <p class="text-sm text-amber-600 mt-2">
              A 2 cuadras de la estación de metro Centro
            </p>
          </div>
        </div>

        <!-- Phone -->
        <div class="flex items-start space-x-4">
          <div class="bg-amber-100 p-3 rounded-full">
            <Phone className="h-6 w-6 text-amber-600" />
          </div>
          <div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Teléfono</h3>
            <p class="text-gray-600">+54 11 1234-5678</p>
            <p class="text-gray-600">+54 11 8765-4321</p>
            <p class="text-sm text-amber-600 mt-2">
              Disponible de Lun-Sab 9:00-19:00
            </p>
          </div>
        </div>

        <!-- Email -->
        <div class="flex items-start space-x-4">
          <div class="bg-amber-100 p-3 rounded-full">
            <Mail className="h-6 w-6 text-amber-600" />
          </div>
          <div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Email</h3>
            <p class="text-gray-600">info@barbershop.com</p>
            <p class="text-gray-600">reservas@barbershop.com</p>
            <p class="text-sm text-amber-600 mt-2">
              Respuesta en menos de 24 horas
            </p>
          </div>
        </div>

        <!-- Hours -->
        <div class="flex items-start space-x-4">
          <div class="bg-amber-100 p-3 rounded-full">
            <Clock className="h-6 w-6 text-amber-600" />
          </div>
          <div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Horarios</h3>
            <div class="space-y-1 text-gray-600">
              <p>Lunes a Viernes: 9:00 - 19:00</p>
              <p>Sábados: 9:00 - 18:00</p>
              <p class="text-red-600 font-medium">Domingos: Cerrado</p>
            </div>
            <p class="text-sm text-amber-600 mt-2">
              Feriados: Horarios especiales
            </p>
          </div>
        </div>

        <!-- Social Media -->
        <div>
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Síguenos</h3>
          <div class="flex space-x-4">
            <a
              href="https://instagram.com/barbershop"
              target="_blank"
              rel="noopener noreferrer"
              class="bg-gradient-to-r from-purple-500 to-pink-500 p-3 rounded-full text-white hover:scale-110 transition-transform duration-300"
            >
              <Instagram className="h-6 w-6" />
            </a>
            <a
              href="https://facebook.com/barbershop"
              target="_blank"
              rel="noopener noreferrer"
              class="bg-blue-600 p-3 rounded-full text-white hover:scale-110 transition-transform duration-300"
            >
              <Facebook className="h-6 w-6" />
            </a>
            <a
              href="https://twitter.com/barbershop"
              target="_blank"
              rel="noopener noreferrer"
              class="bg-sky-500 p-3 rounded-full text-white hover:scale-110 transition-transform duration-300"
            >
              <Twitter className="h-6 w-6" />
            </a>
            <a
              href="https://wa.me/5491112345678"
              target="_blank"
              rel="noopener noreferrer"
              class="bg-green-500 p-3 rounded-full text-white hover:scale-110 transition-transform duration-300"
            >
              <MessageSquare className="h-6 w-6" />
            </a>
          </div>
          <p class="text-sm text-gray-500 mt-3">
            @barbershop_oficial - Sigue nuestro trabajo diario y novedades
          </p>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="bg-gray-50 p-8 rounded-2xl">
        <h3 class="text-2xl font-bold text-gray-900 mb-6">
          Envíanos un Mensaje
        </h3>
        <form class="space-y-6">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                Nombre *
              </label>
              <input
                type="text"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-transparent"
                placeholder="Tu nombre"
              />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                Teléfono
              </label>
              <input
                type="tel"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-transparent"
                placeholder="+54 11 1234-5678"
              />
            </div>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Email *
            </label>
            <input
              type="email"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-transparent"
              placeholder="tu@email.com"
            />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Asunto
            </label>
            <select class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-transparent">
              <option value="">Selecciona un tema</option>
              <option value="reservation">Consulta sobre reservas</option>
              <option value="services">Información de servicios</option>
              <option value="prices">Consulta de precios</option>
              <option value="other">Otro</option>
            </select>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Mensaje *
            </label>
            <textarea
              required
              rows={4}
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-transparent"
              placeholder="Escribe tu mensaje aquí..."
            ></textarea>
          </div>

          <button
            type="submit"
            class="w-full bg-amber-500 hover:bg-amber-600 text-black font-semibold py-3 px-6 rounded-lg transition-colors duration-300"
          >
            Enviar Mensaje
          </button>
        </form>

        <div class="mt-6 text-center">
          <p class="text-sm text-gray-500">
            También puedes contactarnos directamente por WhatsApp
          </p>
          <a
            href="https://wa.me/5491112345678"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center space-x-2 mt-2 text-green-600 hover:text-green-700 font-medium"
          >
            <MessageSquare className="h-4 w-4" />
            <span>WhatsApp: +54 11 1234-5678</span>
          </a>
        </div>
      </div>
    </div>

    <!-- Map Section -->
    <div class="mt-16">
      <div class="bg-gray-200 rounded-2xl overflow-hidden h-64 lg:h-80">
        <div class="w-full h-full flex items-center justify-center text-gray-500">
          <div class="text-center">
            <MapPin className="h-12 w-12 mx-auto mb-4 text-amber-500" />
            <p class="text-lg font-medium">Mapa Interactivo</p>
            <p class="text-sm">Av. Principal 123, Centro</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
